{
    "name": "nodein-backend",
    "version": "1.0.0",
    "description": "NodeIn backend",
    "scripts": {
        "start": "npm run build && node dist/server.js",
        "build": "npm run build-ts",
        "build-ts": "tsc",
        "watch": "concurrently --names \"Typescript,Node.js\" -c \"blue,green\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-ts": "tsc --watch",
        "watch-node": "nodemon dist/server.js",
        "test": "mocha --exit"
    },
    "mocha": {
        "spec": "dist/**/*.spec.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "helmet": "^3.21.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "mongoose": "^5.7.4",
        "morgan": "^1.9.1",
        "validator": "^11.1.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/helmet": "0.0.43",
        "@types/jsonwebtoken": "^8.3.4",
        "@types/mocha": "^5.2.7",
        "@types/mongoose": "^5.5.20",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.7.12",
        "@types/supertest": "^2.0.8",
        "@types/validator": "^10.11.3",
        "concurrently": "^4.1.2",
        "mocha": "^6.2.1",
        "nodemon": "^1.19.3",
        "prettier": "^2.2.1",
        "supertest": "^4.0.2",
        "typescript": "^3.6.4"
    }
}
