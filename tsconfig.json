{
    "compilerOptions": {
        // Project options
        "outDir": "./dist",
        "target": "es6",
        "sourceMap": true,

        // Strict checks
        "noImplicitAny": true,
        "strict": true,

        // Module resolution
        "baseUrl": "./src",
        "esModuleInterop": true,
        "paths": {
            "@config": ["./config/configuration.ts"],
            "@core/*": ["./core/*"],
            "@utils": ["./utils"]
        },
        "module": "commonjs",

        // Advanced options
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
